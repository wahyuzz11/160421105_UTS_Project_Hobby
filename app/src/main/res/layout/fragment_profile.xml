<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtNewPass2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="171dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:gravity="center|left"
            android:text="emailUser"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.858"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtProfile" />

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="231dp"
            android:layout_height="47dp"
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:text="Profile"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="121dp"
            android:layout_height="59dp"
            android:layout_marginTop="28dp"
            android:text="Change Password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.893"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNewPassword2" />

        <EditText
            android:id="@+id/txtNewPassword2"
            android:layout_width="349dp"
            android:layout_height="40dp"
            android:layout_marginTop="248dp"
            android:ems="10"
            android:hint="Ketik Password Baru"
            android:inputType="text|textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername" />

        <EditText
            android:id="@+id/txtOldPass"
            android:layout_width="349dp"
            android:layout_height="40dp"
            android:layout_marginTop="136dp"
            android:ems="10"
            android:hint="Password Lama"
            android:inputType="text|textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername" />

        <EditText
            android:id="@+id/txtNewPassword"
            android:layout_width="349dp"
            android:layout_height="40dp"
            android:layout_marginTop="188dp"
            android:ems="10"
            android:hint="Password Baru"
            android:inputType="text|textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername" />

        <EditText
            android:id="@+id/txtNamaBelakang"
            android:layout_width="349dp"
            android:layout_height="40dp"
            android:layout_marginTop="76dp"
            android:ems="10"
            android:hint="Nama Belakang"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername" />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="171dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:gravity="center|left"
            android:text="Username"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtProfile" />

        <EditText
            android:id="@+id/txtNamaDepan"
            android:layout_width="349dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Nama Depan"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUsername" />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="124dp"
            android:layout_height="60dp"
            android:layout_marginTop="104dp"
            android:text="Log Out"
            android:textColorHighlight="#F44336"
            android:textColorHint="#FF0000"
            android:textColorLink="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNewPassword2"
            app:rippleColor="#F44336" />

        <Button
            android:id="@+id/btnChangeName"
            android:layout_width="121dp"
            android:layout_height="59dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:text="Change Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNewPassword2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>